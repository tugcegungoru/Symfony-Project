{% extends 'adminbase.html.twig' %}

{% block title %}Duyuru{% endblock %}

{% block body %}
    <div class="dashboard-wrapper">
        <div class="container-fluid dashboard-content">
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">

                    <h1>Duyuru</h1>

                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ duyuru.id }}</td>
                        </tr>
                        <tr>
                            <th>Title</th>
                            <td>{{ duyuru.title }}</td>
                        </tr>
                        <tr>
                            <th>Keywords</th>
                            <td>{{ duyuru.keywords }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ duyuru.description }}</td>
                        </tr>
                        <tr>
                            <th>Image</th>
                            <td><img src="{{ asset('uploads/images/'~ duyuru.image) }}" height="100"></td>
                        </tr>
                        <tr>
                            <th>Ekleyen</th>
                            <td>{{ duyuru.ekleyen }}</td>
                        </tr>
                        <tr>
                            <th>Okunmasayisi</th>
                            <td>{{ duyuru.okunmasayisi }}</td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>{{ duyuru.status }}</td>
                        </tr>
                        <tr>
                            <th>Created_at</th>
                            <td>{{ duyuru.createdAt ? duyuru.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Updated_at</th>
                            <td>{{ duyuru.updatedAt ? duyuru.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        </tbody>
                    </table>
                    <br>
                    <div class="col-md-2">
                        <a href="{{ path('admin_duyuru_index') }}" class="btn btn-primary btn-block">Back to list</a>
                    </div>
                    <br>
                    <div class="col-md-2">
                        <a href="{{ path('admin_duyuru_edit', {'id': duyuru.id}) }}" class="btn btn-success">Edit</a>
                    </div>
                    <br>
                    {{ include('admin/duyuru/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
