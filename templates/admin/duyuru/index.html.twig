{% extends 'adminbase.html.twig' %}

{% block title %}Announcement List{% endblock %}

{% block body %}

    <script language="JavaScript" type="text/javascript">
        function openWin( windowURL, windowName, windowFeatures) { window.open( windowURL, windowName, windowFeatures);
        }
    </script>
    <div class="dashboard-wrapper">
        <div class="container-fluid dashboard-content">
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">


                    <a href="{{ path('admin_duyuru_new') }}" class="btn btn-outline-primary">Create New Announcement</a>


                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Category</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Image</th>
                            <th>User</th>
                            <th>Gallery</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for duyuru in duyurus %}
                            <tr>
                                <td>{{ duyuru.id }}</td>
                                <td>{{ duyuru.catname }}</td>
                                <td nowrap>{{ duyuru.title }}</td>
                                <td>{{ duyuru.description }}</td>
                                <td><img src="{{ asset('uploads/images/'~ duyuru.image) }}" height="40"></td>
                                <td><a href="{{ path('admin_user_show',{'id':duyuru.userid})}}">
                                    {{ duyuru.name }} {{ duyuru.surname }}</td>
                                <td>
                                    <a href="javascript:openWin('{{ path('admin_image_new',{'id':duyuru.id}) }}','','toolbar=no,location=no,directories=0,status=no,top=50,left=100,menuBar=no,scrollBars=yes,resizable=no,width=900,height=600');">
                                        <img src="{{ asset('assets/admin/assets/img') }}/gallery.png" height="40">
                                    </a>
                                </td>
                                <td>{{ duyuru.status }}</td>
                                <td>
                                    <a href="{{ path('admin_duyuru_show', {'id': duyuru.id}) }}" class="btn btn-primary btn-block">Show</a>
                                </td>
                                <td>
                                    <a href="{{ path('admin_duyuru_edit', {'id': duyuru.id}) }}" class="btn btn-success">Edit</a>
                                </td>
                                <td>
                                    {{ include ('admin/duyuru/_delete_form.html.twig') }}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="11">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
