{% extends 'homebase.html.twig' %}

{% block title %}Duyuru{% endblock %}

{% block body %}
    <br><br><br><br><br><br><br><br><br><br>
    {{ include ('user/usermenu.html.twig') }}
    <div class="container">
        <div>
            <div class="col">
                <div class="section_title_container text-center">
                    <div class="section_subtitle"></div>
                    <div class="section_title">User Announcement Detail</div>
                </div>
            </div>
        </div>

        <div class="row news_row">
            <div class="news_item">
                <div class="news_content">
                    <div class="news_title" style="text-align: center"></div>
                    <div class="news_text">

                        <table class="table">
                            <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ duyuru.id }}</td>
                            </tr>
                            <tr>
                                <th>Title</th>
                                <td>{{ duyuru.title }}</td>
                            </tr>
                            <tr>
                                <th>Keywords</th>
                                <td>{{ duyuru.keywords }}</td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>{{ duyuru.description }}</td>
                            </tr>
                            <tr>
                                <th>Image</th>
                                <td>{{ duyuru.image }}</td>
                            </tr>
                            <tr>
                                <th>Ekleyen</th>
                                <td>{{ duyuru.ekleyen }}</td>
                            </tr>
                            <tr>
                                <th>Okunmasayisi</th>
                                <td>{{ duyuru.okunmasayisi }}</td>
                            </tr>
                            <tr>
                                <th>Status</th>
                                <td>{{ duyuru.status }}</td>
                            </tr>
                            <tr>
                                <th>Created_at</th>
                                <td>{{ duyuru.createdAt ? duyuru.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Updated_at</th>
                                <td>{{ duyuru.updatedAt ? duyuru.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Detail</th>
                                <td>{{ duyuru.detail | raw }}</td>
                            </tr>
                            <tr>
                                <th>Userid</th>
                                <td>{{ duyuru.userid }}</td>
                            </tr>
                            </tbody>
                        </table>
                        <div class="col-md-2">
                            <a href="{{ path('user_duyuru_index') }}" class="btn btn-primary btn-block">back to list</a>
                        </div>
                        <br>
                        <div class="col-md-2">
                            <a href="{{ path('user_duyuru_edit', {'id': duyuru.id}) }}" class="btn btn-success">edit</a>
                        </div>
                        <br>
                        {{ include('duyuru/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
