{% extends 'homebase.html.twig' %}

{% block title %}Contact | {{setting[0].title}}{% endblock %}
{% block keywords %}{{setting[0].keywords}}{% endblock %}
{% block description %}{{setting[0].description}}{% endblock %}
{% block body %}

    <div class="row news_row">
        <div class="super_container">
            <div class="row news_row">
                <div class="news_item">
                    <div class="news_content">
                        <div class="contact">
                            <div class="container">

                                <div class="footer_newsletter_text" style="color: #000000"></div>
                                <div class="footer_social">
                                    <ul>
                                        <li><h5 style="font-family:arial-black; color: #000000">Find us on social networks:</h5></li>
                                        <li><a href="{{ setting[0].twitter }}"><i class="fa fa-twitter" aria-hidden="true" style="color: #000000"></i></a></li>
                                        <li><a href="{{ setting[0].facebook }}"><i class="fa fa-facebook" aria-hidden="true"style="color: #000000"></i></a></li>
                                        <li><a href="{{ setting[0].instagram }}"><i class="fa fa-instagram" aria-hidden="true"style="color: #000000"></i></a></li>
                                        <li><a href="/www.linkedin.com"><i class="fa fa-linkedin" aria-hidden="true"style="color: #000000"></i></a></li>
                                    </ul>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="info">
                                            <div class="section_title_container">
                                                <div class="section_subtitle">{{setting[0].title}}</div>
                                                <div class="section_title">Contact info</div>
                                            </div>
                                            <div class="info_title"></div>
                                            <ul>
                                                <li>
                                                    {{ setting[0].contact | raw }}
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                    <br><br><br>
                                    <div class="col-lg-4 contact_form_col"  style="left: 200px">
                                        <div class="section_title_container">
                                            <div class="section_subtitle">contact form</div>
                                            <div class="section_title">Get in touch</div>
                                        </div>
                                        <div class="contact_form_container">
                                            {{ include ('messages.html.twig') }}
                                            <form name="messages" method="post" class="contact_form">
                                                <div class="row">
                                                    <div class="col-md-12" >
                                                        <input type="text" id="messages_name" name="messages[name]" class="input_item" placeholder="Your Name" required="required">
                                                        <br><br>
                                                    </div>
                                                    <br>
                                                    <div class="col-md-12">
                                                        <input type="email" id="messages_email" name="messages[email]"class="input_item" placeholder="Your E-mail" required="required">
                                                        <br><br>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <input type="text" id="messages_subject" name="messages[subject]"class="input_item" placeholder="Subject" style="height:40px;">
                                                        <br><br>
                                                    </div><br><br>
                                                    <div class="col-md-12">
                                                        <textarea id="messages_message" name="messages[message]" maxlength="255" class="input_item contact_message" placeholder=" Your Message" required="required" data-error="Please, write us a message."></textarea>
                                                        <br><br>
                                                    </div>
                                                    <input type="hidden" name="token" value="{{csrf_token('form-message')}}" />
                                                    <div class="col-md-4">
                                                        <button id="contact_btn" type="submit" class="btn btn-primary" value="Submit">Send a message</button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br>
{% endblock %}
